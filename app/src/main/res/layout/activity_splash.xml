<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Soft Glow Background Circle -->
    <View
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        android:background="@drawable/glow_circle"
        android:alpha="0.35" />

    <!-- Main Center Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Glass Card Logo Holder -->
        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/glass_card"
            android:elevation="16dp"
            android:layout_marginBottom="20sp"
            android:padding="28dp">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lc_logo"
                android:scaleType="fitCenter"
                android:layout_marginBottom="0dp"
                android:contentDescription="Lc logo" />
        </FrameLayout>

        <!-- App Name -->

        <!-- Tagline -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="25sp"
            android:letterSpacing="0.08"
            android:text="LearnCraft"
            android:textColor="@color/white"
            android:textSize="46sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp"
            android:layout_marginTop="10dp"
            android:text="Turn Knowledge into Intelligence"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:alpha="0.85"
            android:fontFamily="sans-serif-light" />

        <!-- Feature Chips -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“š PPT"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:padding="8dp"

                android:background="@drawable/chip_bg"
                android:layout_marginEnd="9dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§  AI"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/chip_bg"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ MCQs"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/chip_bg" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Branding -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- ðŸ”° Marwadi University Logo (BOTTOM) -->
        <ImageView
            android:id="@+id/imgMarwadiLogo"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:src="@drawable/marwadi_university_logo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="150dp"
            android:contentDescription="Marwadi University Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made by: Segui and Daniel Sabri"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:alpha="0.55" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:alpha="0.4"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</RelativeLayout>
