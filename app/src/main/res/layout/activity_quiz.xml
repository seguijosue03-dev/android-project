<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary_blue"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvQuestionNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Question 1 of 20"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱️ 20:00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressTint="@color/accent_teal"
        android:progressBackgroundTint="@color/background_light"
        android:max="100"
        android:progress="0"/>

    <!-- Quiz Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Question Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:elevation="4dp"
                android:radius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question"
                        android:textSize="14sp"
                        android:textColor="@color/accent_teal"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is the capital of France?"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your answer:"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Option 1 with CheckBox -->
            <LinearLayout
                android:id="@+id/layoutOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:orientation="horizontal"
                android:background="@drawable/option_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/tvOption1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A. Paris"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"/>

            </LinearLayout>

            <!-- Option 2 with CheckBox -->
            <LinearLayout
                android:id="@+id/layoutOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:orientation="horizontal"
                android:background="@drawable/option_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"/>

                <TextView
                    android:id="@+id/tvOption2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B. London"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"/>

            </LinearLayout>

            <!-- Option 3 with CheckBox -->
            <LinearLayout
                android:id="@+id/layoutOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:orientation="horizontal"
                android:background="@drawable/option_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"/>

                <TextView
                    android:id="@+id/tvOption3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C. Berlin"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"/>

            </LinearLayout>

            <!-- Option 4 with CheckBox -->
            <LinearLayout
                android:id="@+id/layoutOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:orientation="horizontal"
                android:background="@drawable/option_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"/>

                <TextView
                    android:id="@+id/tvOption4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D. Madrid"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Next Button -->
    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="PREVIOUS"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#E0E0E0"
            android:layout_marginEnd="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="NEXT QUESTION"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#1A237E"
            android:layout_marginStart="8dp"/>

    </LinearLayout>
</LinearLayout>