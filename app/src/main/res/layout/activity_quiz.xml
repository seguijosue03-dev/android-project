<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary_blue"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvQuestionNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Question 1 of 20"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱️ 20:00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressTint="@color/accent_teal"
        android:progressBackgroundTint="@color/background_light"
        android:max="100"
        android:progress="0"/>

    <!-- Quiz Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Question Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:elevation="4dp"
                android:radius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question"
                        android:textSize="14sp"
                        android:textColor="@color/accent_teal"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is the capital of France?"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your answer:"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:text="A. Paris"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/card_background"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:text="B. London"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/card_background"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:text="C. Berlin"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/card_background"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:text="D. Madrid"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/card_background"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"/>

        </LinearLayout>

    </ScrollView>

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Next Question"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_rounded"
        android:layout_margin="16dp"
        android:elevation="4dp"/>

</LinearLayout>