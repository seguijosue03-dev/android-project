<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp">

        <!-- âœ… STATUS BADGE -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:background="@drawable/status_circle_success">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ðŸ“„ CONTENT -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Question Number -->
            <TextView
                android:id="@+id/tvQuestionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:layout_marginBottom="6dp" />

            <!-- Question -->
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is the capital of France?"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp" />

            <!-- Your Answer -->
            <TextView
                android:id="@+id/tvUserAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Answer: Paris"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <!-- Correct Answer -->
            <TextView
                android:id="@+id/tvCorrectAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correct Answer: Paris"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/success_green"
                android:layout_marginBottom="10dp" />

            <!-- ðŸ’¡ EXPLANATION -->
            <TextView
                android:id="@+id/tvExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Paris is the capital and largest city of France."
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/explanation_bg"
                android:padding="12dp"
                android:lineSpacingExtra="2dp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
