<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style
        name="Base.Theme.LearnCraft"
        parent="Theme.MaterialComponents.Light.NoActionBar"
    >

        <!-- ANDROID 12+ SPLASH OVERRIDE -->
        <item
            name="android:windowSplashScreenBackground"
            tools:targetApi="31">
            @drawable/background_gradient
        </item>

        <item
            name="android:windowSplashScreenAnimatedIcon"
            tools:targetApi="31">
            @null
        </item>

        <!-- PRIMARY COLORS -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- SECONDARY -->
        <item name="colorSecondary">@color/accent_teal</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- SYSTEM -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowBackground">@color/background_light</item>

        <!-- TEXT -->
        <item name="android:textColorPrimary">@color/text_primary</item>

    </style>

    <style name="Theme.LearnCraft" parent="Base.Theme.LearnCraft" />

</resources>
